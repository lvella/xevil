Size Walker::get_size_max() {
  return creatureContext.movingContext.physicalContext.sizeMax;
}



PhysicalP Walker::create(void *,WorldP w,LocatorP l,const Pos &pos) {
  PhysicalP ret = new Walker(w,l,pos);
  assert(ret);
  return ret;
}



